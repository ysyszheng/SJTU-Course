/* pages/UserCenter/UserCenter.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.login{
    height: 100%;
    width: 100%;
    position: absolute;
}

.loginBackground{
    width: 100%;
    height: 100%;
    opacity: 0.4;
    z-index: 0;
}

.loginGreet{
    width: 40%;
    height: 20%;
    border-radius: 10%;
    margin-left: 30%;
    margin-top: -100%;
    background-color: #ffffffe0;
    display: flex;
    position: absolute;
    align-items: center;
    justify-content: center;
    z-index: 20;
    font-size: x-large;
    color: #00000080;
    font-weight: bolder;
}

.head{
  width: 100%;
  height: 450rpx;
  background-color: #ffffff00;
  position: relative;
  display: flex;
}

.banner{
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.6;
}

.greet{
  width: 400rpx;
  height: 60%;
  background-color: #ffffff00;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 20;
  font-size: xx-large;
  color: rgb(255, 255, 255);
  font-weight: bolder;
  margin-top: 10%;
  margin-left: 50rpx;
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  z-index: 10;
  position: absolute;
  margin-top: 150rpx;
  margin-left: 500rpx;
}

.edit{
  width: 150rpx;
  height: 150rpx;
  z-index: 40;
  position: fixed;
  background-color: rgba(255, 255, 255, 0);
  margin-top: 100rpx;
  margin-left: 100rpx;
}

.data{
  width: 100%;
  height: 30%;
  position: relative;
  display: flex;
}

.data_block_1{
  width: 42.5%;
  height: 220rpx;
  position: absolute;
  margin-left: 5%;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10%;
  background-color: #c4c4c4;
  font-size: large;
  font-weight: normal;
  color: rgb(0, 0, 0);
}

.data_block_2{
    width: 42.5%;
    height: 220rpx;
    position: absolute;
    margin-left: 52.5%;
    margin-top: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10%;
    background-color: #c4c4c4;
    font-size: large;
    font-weight: normal;
    color: rgb(0, 0, 0);
}

.block{
    width: 100%;
    height: 110rpx;
    background-color: rgb(255, 255, 255);
    opacity: 0.4;
    border-radius: 10%;
    display: flex;
    position: absolute;
    margin-top: 47.5%;
}

.editName{
    height: 70%;
    margin-top: 2.5%;
    margin-left: 40rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: medium;
    font-weight: bold;
    color: rgb(65, 65, 65);
}